<%= form_for [@neighborhood, @incident] do |f| %>
  <%
  if @incident.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@incident.errors.count, "error") %> prohibited this incident from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @incident.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

    <div class="form-group">
    <%= f.label :date, :class => 'control-label col-md-2' %>
      <%= f.text_field :date, :class => 'form-control' %>
    <%=f.error_span(:date) %>
  </div>


    <div class="form-group">
        <%= f.label :address, :class => 'control-label col-lg-2' %>
        <%= f.text_field :address, :class => 'form-control' %>
      <%=f.error_span(:address) %>
    </div>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
      <%= f.text_field :description, :class => 'form-control' %>
    <%=f.error_span(:description) %>
  </div>

  <div class="form-group">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                neighborhood_incidents_path(@neighborhood), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
